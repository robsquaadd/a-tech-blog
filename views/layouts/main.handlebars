<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>A Tech Blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="w-100 row d-flex flex-column min-vh-100 m-auto">
      <header class="bg-danger row col-12 justify-content-between">
        <a href="/" class="col-3 m-1 text-decoration-none text-light"><h1>A Tech
            Blog</h1></a>
        <nav class="col col-md-5 row">
          <ul
            class="list-unstyled row justify-content-between align-items-end text-center text-md-right"
          >
            <li class="col col-md-2"><a
                href="/"
                class="text-decoration-none text-dark font-weight-bold"
              >Homepage</a></li>
            <li class="col col-md-2"><a
                href="/dashboard"
                class="text-decoration-none text-dark font-weight-bold"
              >Dashboard</a></li>
            {{#if loggedIn}}
              <li class="col col-md-2"><a
                  href="/logout"
                  class="text-decoration-none text-dark font-weight-bold"
                >Logout</a></li>
            {{else}}
              <li class="col col-md-2"><a
                  href="/login"
                  class="text-decoration-none text-dark font-weight-bold"
                >Login</a></li>
            {{/if}}
          </ul>
        </nav>
      </header>
      <section>
        {{{body}}}
      </section>
      <footer class="bg-danger mt-auto">Thank you for visiting</footer>
    </div>
  </body>
</html>