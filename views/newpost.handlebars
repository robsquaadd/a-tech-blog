<div class="container row">
  <form
    id="create-post-form"
    class="form border border-dark col-12 col-md-8 offset-md-2 mt-5"
  >
    <h2>Create a Post: </h2>
    <label for="post-title" class="my-1">Title: </label>
    <input
      type="text"
      id="post-title"
      placeholder="Enter the title here."
      class="col-12 my-2"
    />
    <label for="post-content" class="my-1">Content: </label>
    <textarea
      id="post-content"
      placeholder="Content goes here"
      class="col-12 my-2"
      rows="8"
    >
    </textarea>
    <button
      type="submit"
      id="create-post-button"
      class="btn btn-dark text-light col-12 mt-1 mb-3"
    >Create Post</button>
  </form>
</div>
<script src="/javascript/create-post.js"></script>