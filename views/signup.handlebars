<div class="container">
  <form
    class="border rounded border-dark row my-5 justify-content-center"
    id="signup-form"
  >
    <h2 class="text-dark font-weight-bold text-align-center">Sign Up</h2>
    <label for="signup-username">Username</label>
    <input
      type="text"
      id="signup-username"
      placeholder="Please create a username."
      class="my-1 col-10"
    />
    <label for="signup-password">Password</label>
    <input
      type="password"
      id="signup-password"
      placeholder="Please create a password."
      class="my-1 col-10"
    />
    <button
      id="signup-button"
      class="btn btn-danger my-1 col-10"
      type="submit"
    >Sign Up</button>
    <a href="/login" class="mt-3 mb-1">Already have an account? Log In Here.</a>
  </form>
</div>
<script src="/javascript/signup.js"></script>